%table
  %thead
    %tr
      %th ID
      %th Text
      %th
      %th
  %tbody
    - widgets.each do |widget|
      %tr
        %td= widget.title
        %td
          = link_to 'view', widget_path(widget)
          |
          = link_to 'edit', edit_widget_path(widget)
        %td
          = form_tag widget, :method => :delete do
            %button delete