= form_for widget do |f|
  %p
    = f.label :title
    %br
    = f.text_field :title, :size => 60
  %p
    = f.label :description
    %br
    = f.text_area :description, :rows => 5, :cols => 50
  %p
    = f.label :active do
      = f.check_box(:active)
      Active
  %button= widget.persisted? ? 'Save' : 'Add'